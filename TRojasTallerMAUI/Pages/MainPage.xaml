<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRojasTallerMAUI.Pages.MainPage"
             Title="GridLayout">
    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*">
        <BoxView BackgroundColor="Purple" Grid.Row="0" Grid.Column="0" />
        <BoxView BackgroundColor="Orange" Grid.Row="0" Grid.Column="1" />
        <BoxView BackgroundColor="Blue" Grid.Row="1" Grid.Column="0" />

        <Grid Grid.Row="1" Grid.Column="1" BackgroundColor="MediumPurple">
            <Button Text="Ir a StackLayout"
                    Clicked="OnGoToStackClicked"
                    BackgroundColor="MediumPurple"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"/>
        </Grid>
    </Grid>
</ContentPage>
